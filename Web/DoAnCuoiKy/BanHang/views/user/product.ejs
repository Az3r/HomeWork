    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Sản phẩm</h2>
                    <div class="panel-group category-products" id="accordian"><!--category-productsr-->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="../product/mat-kinh.html">Mắt kính</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="../product/vest.html">Vest</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="../product/mu-non.html">Mũ nón</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="../product/trang-suc.html">Trang sức</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="../product/quan-ao.html">Quần áo</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="../product/tui-xach.html">Túi xách</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="../product/giay.html">Giày</a></h4>
                            </div>
                        </div>
                    </div><!--/category-products-->
                    <div class="shipping text-center"><!--shipping-->
                        <img src="../user/images/home/shipping.jpg" alt="" />
                    </div><!--/shipping-->

                </div>
            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items"><!--features_items-->
                    <% danhsach.rows.forEach(function(sp){%>
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <img height="240" width="240" src= <%= "../" + sp.imgPath %> />
                                        <h2><%= sp.price%> vnd</h2>
                                        <a href= <%= "../" + sp.id  %>><p class="linkproduct" ><%= sp.name%></p></a>
    
                                        <a class="btn btn-default add-to-cart" href= <%= '/addcart?id=' + sp.id %> ><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    
                </div><!--features_items-->
                         <!--phan trang -->
                         <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <% if(currentPage > 1) { %>
                                    <li class="page-item"><a class="page-link" href= <%= fullreq + '&page=' + (parseInt(currentPage) - 1)%> >Previous</a></li>
                                <% }else { %>
                                    <li class="page-item"><a class="page-link" href= <%= fullreq %> >Previous</a></li>
                                <% } %>    
                                <!------------------------------------------->
                                <% if(limitPage > 2) {%>
                                    <% if(currentPage < limitPage - 2) { %>
                                        <li class="page-item"><a class="page-link" href= <%= fullreq + '&page='  + currentPage %> ><%= currentPage %></a></li>
                                    <% }else { %>                                                           
                                        <li class="page-item"><a class="page-link" href= <%= fullreq + '&page=' + (parseInt(limitPage) - 2).toString() %> ><%= parseInt(limitPage) - 2 %></a></li>                               
                                    <% } %>
                                <%} else{%>
                                    <li class="page-item"><a class="page-link" href= <%= fullreq + '&page=1' %> >1</a></li>
                                <%}%>
        
                                 <!------------------------------------------->
                                <% if(limitPage > 2) {%>
                                    <% if(currentPage < limitPage - 1) { %>
                                        <li class="page-item"><a class="page-link" href= <%= fullreq + '&page=' + (parseInt(currentPage) + 1).toString() %> ><%= parseInt(currentPage) + 1 %></a></li>
                                    <% }else { %>
                                        <li class="page-item"><a class="page-link" href= <%= fullreq + '&page=' + (parseInt(limitPage) - 1).toString() %> ><%= parseInt(limitPage) - 1 %></a></li>
                                    <% } %>
                                <% }%>
        
                                 <!------------------------------------------->
                                <% if(limitPage > 1) { %>
                                    <% if(currentPage < limitPage - 2) { %>
                                        <li class="page-item"><a class="page-link" href= <%= fullreq + '&page=' + (parseInt(currentPage)  + 2).toString() %> ><%= parseInt(currentPage) + 2 %></a></li>
                                    <% }else { %>
                                        <li class="page-item"><a class="page-link" href= <%= fullreq + '&page=' + limitPage %> ><%= limitPage%></a></li>
                                    <% } %>
                                <% } %>
                                 <!------------------------------------------->
                                <% if(currentPage < limitPage) { %>
                                    
                                    <li class="page-item"><a class="page-link" href= <%= fullreq + '&page=' + (parseInt(currentPage) + 1)%> >Next</a></li>                            
                                <% }else { %>
                                    
                                    <li class="page-item"><a class="page-link" href= <%= fullreq + '&page=' + limitPage %> >Next</a></li>
                                <% } %>
                              
                            </ul>
                          </nav>
            </div>
        </div>
    </div>
</section>