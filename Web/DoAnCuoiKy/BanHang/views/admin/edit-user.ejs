<div class="container" style="background: #f2f2f2;">
    <div class="col-sm-12">
        <h1>Thông tin khách hàng</h1>
        <hr>
        <div class="row">
            <!-- left column -->
            <div class="col-md-3">
                <div class="text-center">
                    <img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
                    <h6>Tải ảnh lên...</h6>

                    <input type="file" class="form-control">
                </div>
            </div>

            <!-- edit form column -->
            <div class="col-md-9 personal-info">
               
                <p style="color: red"><%= nofi%></p>
                <form class="form-horizontal" role="form" method="POST" action= <%= "/admin/edit-user.html?userid=" + danhsach.id %> >
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Họ và tên đệm:</label>
                        <div class="col-lg-8">
                            <input name="newlastname" class="form-control" type="text" placeholder= <%= danhsach.lastname %>>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Tên:</label>
                        <div class="col-lg-8">
                            <input name="newname" class="form-control" type="text" placeholder=<%= danhsach.name %> >
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Email:</label>
                        <div class="col-lg-8">
                            <input name="newemail" class="form-control" type="text" placeholder=<%= danhsach.email %> >
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-md-3 control-label">Tên đăng nhập:</label>
                        <div class="col-md-8">
                            <input name="newusername" class="form-control" type="text" placeholder=<%= danhsach.username %> >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Mật khẩu mới:</label>
                        <div class="col-md-8">
                            <input name="newpassword" class="form-control" type="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <button type="submit" class="btn btn-primary" >Lưu thay đổi</button>
                            <a href="/admin/user.html"><input type="reset" class="btn btn-primary" value="Hủy"></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <hr>
</div>