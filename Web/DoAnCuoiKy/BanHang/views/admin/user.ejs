<div style="margin-left: 30%; margin-right: 30%; margin-top: 3%; font-size: large" class="alert alert-success text-center" role="alert"><span><strong>Danh sách khách hàng</strong>.</span></div><br><br>
<div class="container">
    <div class="table-responsive">
        <table class="table" cellspacing="0">
            <thead style="background: #E2DEDE">
            <tr>
                <th>STT</th>
                <th>Tên đăng nhập</th>
                <th>Email</th>
                <th>Họ</th>
                <th>Tên</th>
                <th>Trạng thái</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                
                <% danhsach.rows.forEach(function(user){%>               
                    <tr>
                        <td><%= i %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.lastname %></td>
                        <td><%= user.name %></td>
                        <td><%= user.status %></td>
                        <% if (user.status == "ban") { %>
                        <td><a style="margin: 0 2px;"  href=<%= '/admin/edit-user.html?userid=' + user.id %> ><i class="fa fa-edit" ></i></a><a style="margin: 0 2px;" href=<%= '/admin/edit-user.html?unlockid=' + user.id %> ><i  class="fa fa-unlock" ></i></a>
                        <% } else {%>
                            <td><a style="margin: 0 2px;"  href=<%= '/admin/edit-user.html?userid=' + user.id %> ><i class="fa fa-edit" ></i></a><a style="margin: 0 2px;" href=<%= '/admin/edit-user.html?banid=' + user.id %> ><i  class="fa fa-lock" ></i></a>
        
                        <% } %>
                    </tr>
                    <% i += 1 %>
                <% }); %>
            </tbody>
        </table>

        <nav aria-label="Page navigation example" style="margin: 5px;">
            <ul class="pagination">
                <% if(currentPage > 1) { %>
                    <li class="page-item"><a class="page-link" href= <%= '/admin/user.html?page=' + (parseInt(currentPage) - 1)%> >Previous</a></li>
                <% }else { %>
                    <li class="page-item"><a class="page-link" href= <%= '/admin/user.html' %> >Previous</a></li>
                <% } %>    
                <!------------------------------------------->
                <% if(limitPage > 2) {%>
                    <% if(currentPage < limitPage - 2) { %>
                        <li class="page-item"><a class="page-link" href= <%='/admin/user.html?&page='  + currentPage %> ><%= currentPage %></a></li>
                    <% }else { %>                                                           
                        <li class="page-item"><a class="page-link" href= <%='/admin/user.html?&page=' + (parseInt(limitPage) - 2).toString() %> ><%= parseInt(limitPage) - 2 %></a></li>                               
                    <% } %>
                <%} else{%>
                    <li class="page-item"><a class="page-link" href= <%='/admin/user.html?&page=1' %> >1</a></li>
                <%}%>

                 <!------------------------------------------->
                <% if(limitPage > 2) {%>
                    <% if(currentPage < limitPage - 1) { %>
                        <li class="page-item"><a class="page-link" href= <%='/admin/user.html?&page=' + (parseInt(currentPage) + 1).toString() %> ><%= parseInt(currentPage) + 1 %></a></li>
                    <% }else { %>
                        <li class="page-item"><a class="page-link" href= <%='/admin/user.html?&page=' + (parseInt(limitPage) - 1).toString() %> ><%= parseInt(limitPage) - 1 %></a></li>
                    <% } %>
                <% }%>

                 <!------------------------------------------->
                <% if(limitPage > 1) { %>
                    <% if(currentPage < limitPage - 2) { %>
                        <li class="page-item"><a class="page-link" href= <%='/admin/user.html?&page=' + (parseInt(currentPage)  + 2).toString() %> ><%= parseInt(currentPage) + 2 %></a></li>
                    <% }else { %>
                        <li class="page-item"><a class="page-link" href= <%='/admin/user.html?&page=' + limitPage %> ><%= limitPage%></a></li>
                    <% } %>
                <% } %>
                 <!------------------------------------------->
                <% if(currentPage < limitPage) { %>
                    
                    <li class="page-item"><a class="page-link" href= <%='/admin/user.html?&page=' + (parseInt(currentPage) + 1)%> >Next</a></li>                            
                <% }else { %>
                    
                    <li class="page-item"><a class="page-link" href= <%='/admin/user.html?&page=' + limitPage %> >Next</a></li>
                <% } %>
              
            </ul>
          </nav>

    </div>
</div>